<!DOCTYPE html>
<html>
  <head>
    <title>My Blog Site</title>
    </head>
  <body>
    <div class="header">
      <h1>My Blog Site</h1>
    </div>
    <div class="container">
      <ul class="blog-list">
        <% blogs.forEach(function(blog) { %>
          <li class="blog-item">
            <h2 class="blog-title"><%= blog.title %></h2>
            <p class="blog-content"><%= blog.content.substring(0, 150) + "..." %></p>
            <a class="read-more" href="/blogs/<%= blog.id %>">Read More</a>
          </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
